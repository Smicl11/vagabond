
<h3>Post Show Page</h3>
  <strong>Title:</strong><%= @post.title %>
  <strong>Text:</strong><%= @post.text %>
  <strong>Written By:</strong><%= @user%>
  <br>
  <h4><strong>Comments:</strong> <% @comments.each do |c| %></h4>
  <%= c.body %>
  <br>
  <% end %>
  <br>
  <%=  link_to "Add Comment", new_comment_path(@city,@post) %>
  <%= button_to "Delete Post", [@city,@post], method: :delete, class: "btn btn-small btn-danger" %>
  <%= link_to "Edit Post", post_city_edit_path(@city, @post),  :class=>"btn btn-small btn-warning" %>
  <br>
<%= link_to "Edit City", city_edit_path ,:class => "btn btn-small btn-info"%>
<br>
<%= link_to "Cities Index", cities_path, :class=> "btn btn-small btn-success" %>
<br>
<%= button_to "Delete City", @city, method: :delete, class: "btn btn-small btn-primary" %>
