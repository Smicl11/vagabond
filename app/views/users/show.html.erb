  <%= @user.last_name %>
  <br>
  <%= @user.current_city %>
  <br>
  Created at:
  <%= @user.created_at %>
  <br>
  <h5>List of <%= @user.first_name %>'s Posts</h5>
  <hr>
  <% @posts.each do |p| %>
  <strong>Title: </strong><%= link_to p.title, post_path(p) %>
  <strong>Text: </strong><%= p.text %>
  <%= button_to "Delete Post", p, method: :delete, data: {:confirm=>'Are you sure you want to delete ?'},class: "btn btn-small btn-primary" %>

